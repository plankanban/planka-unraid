<?xml version="1.0"?>
<Container version="2">
  <Name>PLANKA</Name>
  <Icon>https://raw.githubusercontent.com/planka/unraid/master/img/planka.png</Icon>
  <github>https://github.com/plankanban/planka</github>
  <Support>https://github.com/plankanban/planka/unraid/issues</Support>
  <Project>https://planka.app/</Project>
  <Category>Productivity: Tools:</Category>
  <Date>2024-07-13</Date>
  <Beta>False</Beta>
  <Repository>ghcr.io/plankanban/planka</Repository>
  <Registry>https://github.com/plankanban/planka/pkgs/container/planka</Registry>
  <TemplateURL>https://raw.githubusercontent.com/planka/unraid/master/planka.xml</TemplateURL>
  <WebUI>http://[IP]:[PORT:1337]</WebUI>
  <Network Default="bridge">bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Requires>Postgres14</Requires>
  <PostArgs></PostArgs>
  <Overview>The realtime kanban board for workgroups built with React and Redux.
        [br][br]
        [b]To run Planka, you need to have a Postgres database running. You can use the Postgres14 template from the Community Apps to set up the database.[/b][br]   
        [b][u][span style='color: #E80000;']Configuration[/span][/u][/b][br]
        [b]/mnt/user/appdata/planka[/b] This is where Planka will store it's data. For best performance, keep the files on cache drive.[br]
        [b]WebUI Port 1337[/b] Default connection port[br]
        [b]BASE_URL[/b] Base URL of Planka. Defaults to http://localhost:3000[br]
        [b]DATABASE_URL[/b] Postgres Database Auth. Defaults to postgresql://user:password@IP-adress:port/db-name[br]
        [b]SECRET_KEY[/b] Secret Key. Defaults to notsecretkey [br]
        [b]DEFAULT_ADMIN_EMAIL[/b] Do not remove if you want to prevent this user from being edited/deleted. Defaults to demo@demo.demo[br]
        [b]DEFAULT_ADMIN_USERNAME[/b] Defaults to demo[br]
        [b]DEFAULT_ADMIN_NAME[/b] Defaults to Demo Demo[br]
        [b]DEFAULT_ADMIN_PASSWORD[/b] Defaults to demo[br]
  </Overview>
  <Config Name="User Avatars" Target="/app/public/user-avatars" Default="/mnt/user/appdata/planka/user-avatars" Mode="rw" Description="User Avatar Storage Location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/planka/user-avatars</Config>
  <Config Name="Project Background Images" Target="/app/public/project-background-images" Default="/mnt/user/appdata/planka/project-background-images" Mode="rw" Description="Background Image Location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/planka/project-background-images</Config>
  <Config Name="Attachments" Target="/app/private/attachments" Default="/mnt/user/appdata/planka/attachments" Mode="rw" Description="Attachment Storage Location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/planka/attachments</Config>
  <Config Name="WebUI Port" Target="1337" Default="3000" Mode="" Description="Web UI Port" Type="Port" Display="always" Required="true" Mask="false">3000</Config>
  <Config Name="Base URL" Target="BASE_URL" Default="http://localhost:3000" Mode="" Description="Base URL of Planka" Type="Variable" Display="always" Required="true" Mask="false">http://localhost:3000</Config>
  <Config Name="Database URL" Target="DATABASE_URL" Default="postgresql://user:password@IP-adress:port/db-name" Mode="" Description="Postgres Database Auth" Type="Variable" Display="always" Required="true" Mask="false">postgresql://user:password@IP-adress:port/db-name</Config>
  <Config Name="Secret Key" Target="SECRET_KEY" Default="notsecretkey" Mode="" Description="Secret Key" Type="Variable" Display="always" Required="true" Mask="true">notsecretkey</Config>
  <Config Name="DEFAULT_ADMIN_EMAIL" Target="DEFAULT_ADMIN_EMAIL" Default="demo@demo.demo" Mode="" Description="Do not remove if you want to prevent this user from being edited/deleted" Type="Variable" Display="always" Required="true" Mask="false">demo@demo.demo</Config>
  <Config Name="DEFAULT_ADMIN_USERNAME" Target="DEFAULT_ADMIN_USERNAME" Default="demo" Mode="" Description="DEFAULT_ADMIN_USERNAME" Type="Variable" Display="always" Required="true" Mask="false">demo</Config>
  <Config Name="DEFAULT_ADMIN_NAME" Target="DEFAULT_ADMIN_NAME" Default="Demo Demo" Mode="" Description="DEFAULT_ADMIN_NAME" Type="Variable" Display="always" Required="true" Mask="false">Demo Demo</Config>
  <Config Name="DEFAULT_ADMIN_PASSWORD" Target="DEFAULT_ADMIN_PASSWORD" Default="demo" Mode="" Description="DEFAULT_ADMIN_PASSWORD" Type="Variable" Display="always" Required="true" Mask="true">demo</Config>
</Container>